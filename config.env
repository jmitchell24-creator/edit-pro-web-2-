# Server
PORT=8080
NODE_ENV=development

# Database
DB_PATH=backend/data/editquick.db

# Modes
AI_MODE=shotstack
STORAGE_MODE=cloud

# Shotstack
SHOTSTACK_API_KEY=
SHOTSTACK_BASE_URL=https://api.shotstack.io/stage

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=editprowebsite2

# CORS
ALLOWED_ORIGINS=http://localhost:8080,https://edit-pro-web-2.onrender.com
# Database Configuration
MONGODB_URI=mongodb://localhost:27017/edit-quick-ai
MONGODB_URI_CLOUD=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/edit-quick-ai

# File Upload Limits
MAX_FILE_SIZE=100MB
MAX_FILES=10

# AI Processing
FFMPEG_PATH=./ffmpeg-extracted/ffmpeg-master-latest-win64-gpl/bin/ffmpeg.exe
FFPROBE_PATH=./ffmpeg-extracted/ffmpeg-master-latest-win64-gpl/bin/ffprobe.exe

# Public base URL for building local file URLs (e.g. http://localhost:8080)
PUBLIC_BASE_URL=http://localhost:8080