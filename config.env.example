# Edit Quick AI - Environment Configuration
# Copy this file to config.env and update the values

# Server Configuration
PORT=8080
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database
DB_PATH=backend/data/editquick.db

# File Upload
MAX_FILE_SIZE=500MB
UPLOAD_PATH=uploads
PROJECTS_PATH=projects

# FFmpeg
FFMPEG_PATH=ffmpeg-8.0/ffmpeg

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# Rate Limiting
AUTH_RATE_LIMIT=5
API_RATE_LIMIT=100
RATE_LIMIT_WINDOW=900000

# Guest Usage
GUEST_VIDEO_LIMIT=1
GUEST_TRACKING_ENABLED=true

# Subscription Plans
BASIC_PLAN_PRICE=9.99
PRO_PLAN_PRICE=24.99
ENTERPRISE_PLAN_PRICE=99.99

# AWS S3 Configuration (for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Storage Mode (local or cloud)
STORAGE_MODE=cloud

# AI Processing Mode (ffmpeg, simulate, shotstack)
AI_MODE=ffmpeg

# Shotstack (cloud rendering)
SHOTSTACK_API_KEY=your-shotstack-api-key
SHOTSTACK_BASE_URL=https://api.shotstack.io/stage

# CORS
ALLOWED_ORIGINS=http://localhost:8080,https://edit-pro-web-2.onrender.com

# Public base URL for building local file URLs (e.g. http://localhost:8080)
PUBLIC_BASE_URL=